# THREAD - AI Wardrobe Stylist
# Copy this to .env and customize

# Server
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_PATH=./data/thread.db

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_VISION_MODEL=llava:7b
DEFAULT_TEXT_MODEL=llama3.2:3b

# Images
IMAGE_STORAGE_PATH=./data/images

# Security
JWT_SECRET=change-this-to-a-random-string-in-production
API_KEY_PREFIX=thread_sk_

# Features
ENABLE_WEBHOOKS=true
ENABLE_MULTI_USER=true

# Weather (free, no key needed)
WEATHER_API_BASE=https://api.open-meteo.com/v1

# Optional: Google Drive API key
GOOGLE_API_KEY=

# Error Monitoring
SENTRY_DSN=https://...@sentry.io/...
VITE_SENTRY_DSN=https://...@sentry.io/...

# Email (Resend)
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@outerfit.net
EMAIL_HELLO=hello@outerfit.net
EMAIL_REPLY_TO=hello@outerfit.net
APP_URL=http://localhost:5173
